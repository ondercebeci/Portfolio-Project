@model EntityLayer.Concrate.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditTestimonial","Testimonial", FormMethod.Post))
{ 
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div>
                <h3 class="mb-0">Referans Detay Sayfası</h3>
                <br/>
            </div>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Ünvan</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                <button class="btn btn-outline-success">İptal</button>
            </form>
        </div>
    </div>
</div>
}